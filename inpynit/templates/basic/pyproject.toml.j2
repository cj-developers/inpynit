[build-system]
requires = ["setuptools>=45", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
{% if license %}license = {text = "{{ license }}"}{% endif %}
authors = [
    {name = "{{ author }}", email = "{{ email }}"}
]
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    {% if license == "MIT" %}"License :: OSI Approved :: MIT License",{% endif %}
    {% if license == "Apache-2.0" %}"License :: OSI Approved :: Apache Software License",{% endif %}
    {% if license == "GPL-3.0" %}"License :: OSI Approved :: GNU General Public License v3 (GPLv3)",{% endif %}
    {% if license == "BSD-3-Clause" %}"License :: OSI Approved :: BSD License",{% endif %}
    {% if license == "ISC" %}"License :: OSI Approved :: ISC License (ISCL)",{% endif %}
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
]
keywords = ["python", "package"]
requires-python = ">={{ python_version }}"
dependencies = []

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "ruff>=0.1.0",
    "mypy>=0.991",
]

[project.urls]
Homepage = "https://github.com/{{ author }}/{{ project_name }}"
Repository = "https://github.com/{{ author }}/{{ project_name }}"
Documentation = "https://{{ project_name }}.readthedocs.io"
"Bug Tracker" = "https://github.com/{{ author }}/{{ project_name }}/issues"

[tool.setuptools.packages.find]
where = ["."]
include = ["{{ project_slug }}*"]

[tool.mypy]
python_version = "{{ python_version }}"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = true

[tool.ruff]
line-length = 119
target-version = "py{{ python_version | replace('.', '') }}"

[tool.ruff.lint]
select = [
    "E",  # pycodestyle errors
    "W",  # pycodestyle warnings
    "F",  # pyflakes
    "I",  # isort
    "B",  # flake8-bugbear
    "C4", # flake8-comprehensions
    "UP", # pyupgrade
]
ignore = []

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
skip-magic-trailing-comma = false
line-ending = "auto"

[tool.ruff.lint.isort]
known-first-party = ["{{ project_slug }}"]
force-single-line = false 